<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=yes, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="{{ asset('css/app.css') }}" />

    <title>{% block title %}Sortir.com {% endblock %}</title>

</head>

<body>
    <header>
            <div class="navbar">
                <div class="nav-logo">
                    <img src="{{ asset('img/sortir-logo.png') }}" alt="Sortir Logo" />
                </div>

                <div class="nav-menu">
                    <ul>
                         <li><a href="#" title="Accueil">Accueil</a></li>
                         <li><a href="#" title="Villes">Villes</a></li>
                         <li><a href="#" title="Campus">Campus</a></li>
                         <li><a href="#" title="Modifier profil">Modifier profil</a></li>
                        {% if app.user %}
                         <li><a href="#" title="Profil">Mon profil</a></li>
                         <li><a href="{{ path('app_logout') }}" title="Deconnection">Se déconnecter ({{ app.user.pseudo }})</a></li>
                        {% else %}
                          <li><a href="{{ path('app_login') }}" title="Login">Se connecter</a></li>
                          <li><a href="{{ path('app_register') }}" title="CréationProfil">Créer un profil</a></li>
                            {# todo quand tout le monde a un compte admin, mettre le lien accessible Admin et supprimer le lien accessible à tous #}
                        {% endif %}
                    </ul>
                </div>
            </div>
    </header>

    <main>
        {%block body %}{% endblock %}
    </main>
    <footer>
        <div>&copy; {{ "now"|date ("Y") }} | Sortir.com</div>
    </footer>
</body>
</html>